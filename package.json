{
  "name": "@clarion-app/gtd-frontend",
  "version": "1.0.4",
  "description": "A React frontend for the GTD application",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clarion-app/gtd-frontend.git"
  },
  "author": "Tim Schwartz <tim@metaverse.systems>",
  "license": "MIT",
  "dependencies": {
    "@clarion-app/types": "^1.2.0",
    "@reduxjs/toolkit": "^2.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.1",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6"
  },
  "customFields": {
    "clarion": {
      "api": [
        "gtdFrontendApi"
      ],
      "routes": [
        {
          "path": "/gtd/actions",
          "element": "<Actions />"
        },
        {
          "path": "/gtd/actions/:id",
          "element": "<Action />"
        },
        {
          "path": "/gtd/projects",
          "element": "<Projects />"
        },
        {
          "path": "/gtd/projects/:id",
          "element": "<Project />"
        },
        {
          "path": "/gtd/contexts",
          "element": "<Contexts />"
        },
        {
          "path": "/gtd/contexts/:id",
          "element": "<Context />"
        }
      ],
      "menu": {
        "name": "GTD Manager",
        "entries": [
          {
            "name": "Actions",
            "path": "/gtd/actions"
          },
          {
            "name": "Projects",
            "path": "/gtd/projects"
          },
          {
            "name": "Contexts",
            "path": "/gtd/contexts"
          }
        ]
      }
    }
  }
}
